<% NEW_MEDAL = 1 %>

<% if @new_medals.count == NEW_MEDAL %>
<div id="new_medal_modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Parabéns!!! Você ganhou uma nova medalha!</h4>
      </div>
      <div class="modal-body">
        <% @new_medals.each do |medal| %>
          <div class="thumbnail" id="user_medals">
            <%= image_tag(medal.image) %>
            <p class="medal_name">
              <b><%= medal.name %></b>
            </p>
            <p class="medal_description">
              <%= medal.description %>
            </p>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
<% else %>
<div id="new_medal_modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Parabéns!!! Você ganhou <%= @new_medals.count %> novas medalhas!</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <% @new_medals.each do |medal| %>
            <div class="col-sm-4 col-md-6">
              <div class="thumbnail" id="user_medals">
                <%= image_tag(medal.image) %>
                <p class="medal_name">
                  <b><%= medal.name %></b>
                </p>
                <p class="medal_description">
                  <%= medal.description %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
<% end %>

<script>
$('#new_medal_modal').modal('show');
</script>
