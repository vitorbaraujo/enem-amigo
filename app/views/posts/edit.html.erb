<%= form_for @post, url: { action: "update", id: current_user.id, post_id: @post.id } do |post_form| %>
	<%= post_form.label :content, "Edite aqui seu post" %>
	<%= post_form.text_area :content, class: 'form-control' %>
	<%= hidden_field_tag(:post_id, @post.id) %>
	<%= post_form.submit "Atualizar", class: 'btn btn-success active col-md-2' %>
<% end %>