<h1> Notificações </h1>

<% if !@notifications.blank? %>
  <table class='table'>
    <thead>
      <th class="align-center">Enviado por</th>
      <th class="align-center">Assunto</th>
      <th class="align-center">Data</th>
    </thead>

    <% @notifications.each do |notification| %>
      <tr>
        <td class="align-center"><%= notification.sender %></td>
        <td class="align-center"><%= link_to(notification.message, notification.link) %></td>
        <td class="align-center"><%= notification.created_at.strftime(" %d/%m/%Y") %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h3> Você não possui notificações </h3>
<% end %>
